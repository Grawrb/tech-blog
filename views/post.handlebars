<!-- page to view a post with its associated comments and add a new comment -->
 {{#if post}} 
<div class="m-2 bg-gray-200 p-4 rounded shadow">
    <h3 id="post-title" class="text-xl font-semibold post-title">{{post.title}} <span class= "italic text-sm font-light">By {{post.author}} at {{format_date post.date_created}}</span></h3>
    <div class= "m-4">
        <p id="post-content" class="post-content">{{post.text}}</p>
    </div>
</div>
{{#if comments}}
<h2 class="mt-1 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Comments</h2>
{{#each comments as |comment|}}
    <div class="m-2 bg-gray-200 p-4 rounded shadow">
        <h3 id="comment-title" class="text-xl font-semibold comment-title">{{comment.title}} <span class= "italic text-sm font-light">By {{comment.author}} at {{format_date comment.date_created}}</span></h3>
        <div class= "m-4">
            <p id="comment-content" class="comment-content">{{comment.text}}</p>
        </div>
    </div>
{{/each}}
{{/if}}
<div class="m-2 bg-gray-200 p-4 rounded shadow ">
    <form id="comment-form">
        <div class="space-y-12">
            <div class="border-b border-gray-900/10 pb-12">
                <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                    <div class="col-span-full">
                        <div class="mt-2">
                            <textarea id="comment-text" name="comment-text" rows="3" class="block w-full rounded-md border-0 p-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Your Comment"></textarea>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="m-4 flex items-center justify-end gap-x-6">
            <button type="submit" id="share-comment-btn" data-post-id={{post.id}} class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Share Comment</button>
{{/if}}