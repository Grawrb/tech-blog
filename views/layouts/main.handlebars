<!-- Main layout for the application -->
<html lang="en" class="h-full bg-white">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tech-Watch</title>
    <link rel="stylesheet" href="/css/jass.css" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="h-full">
    <nav class="bg-gray-500 w-full shadow-md shadow-blue-600">
  <div class="mx-auto max-w-7xl px-2 pb-1 sm:px-6 lg:px-8 h-16 flex items-center relative">
    <!-- Logo and company name -->
    <div class="flex">
      <h1 class="text-gray-900 text-3xl font-bold ml-4">Tech-Watch</h1>
    </div>
    <!-- Logout button (conditionally rendered if logged in) -->
    {{#if logged_in}}
    <div class="absolute right-0 mr-4">
      <button id="home-btn" type="click" class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Home</button>
      <button id="dashboard-btn" type="click" class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Dashboard</button>
      <button id="new-post-btn" type="click" class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">New Post</button>
      <button id="logout" type="click" class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">Log Out</button>
    </div>
         <!-- modal to display create post form -->
<div class="relative hidden z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true" id="new-post-modal">
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
  <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
    <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
      <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg">
        <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
          <div class="sm:flex sm:items-start">
            <form id="post-form">
              <div class="space-y-12">
                <div class="border-b border-gray-900/10 pb-12">
                  <h2 class="text-base font-semibold leading-7 text-gray-900">What's on your mind?</h2>

                  <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                    <div class="sm:col-span-4">
                      <div class="mt-2">
                        <div class="flex rounded-md shadow-sm ring-1 ring-inset ring-gray-300 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-600 sm:max-w-md">
                          <input type="text" name="post-title" id="post-title" class="block flex-1 border-0 bg-transparent py-1.5 pl-1 text-gray-900 placeholder:text-gray-400 focus:ring-0 sm:text-sm sm:leading-6" placeholder="Title" />
                        </div>
                      </div>
                    </div>

                    <div class="col-span-full">
                      <div class="mt-2">
                        <textarea id="post-text" name="post-text" rows="3" class="block w-full rounded-md border-0 p-1 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Your Post"></textarea>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="mt-6 flex items-center justify-end gap-x-6">
                <button type="click" id="close-modal-btn" class="text-sm font-semibold leading-6 text-gray-900">Cancel</button>
                <button type="submit" id="share-post-btn" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Share Post</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
    {{/if}}
  </div>
  </div>
</nav>
      <!-- Main content displayed through handlebars syntax. -->
    <main class="h-full">
        <div>
        {{{body}}}
        </div>
        <footer class="flex flex-col items-end w-full bg-gray-500 text-white text-center p-4 shadow-md shadow-blue-600">
        <div class="container mx-auto">
            <p>&copy; <span id="year"></span> Tech-Watch. All rights reserved.</p>
        </div>
    </footer>
    </main>
    <!-- If logged in, use scripts. -->
    {{#if logged_in}}
      <script src="/js/logout.js"></script>
      <script src="/js/navHeader.js"></script>
      <script src="/js/comment.js"></script>
    {{/if}}
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/2.3.0/flowbite.min.js"
    ></script>
  </body>
</html>