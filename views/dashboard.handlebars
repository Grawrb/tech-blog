<!-- User profile page to view only their posts -->
<div>
    <h2 class="mt-1 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">My Dashboard</h2>
{{#each posts as |post|}}
<div class="m-2 bg-gray-200 p-4 rounded shadow">
 <h3 id="post-title" class="text-xl font-semibold post-title">{{post.title}} <span class= "italic text-sm font-light">By {{post.author}} at {{format_date post.date_created}}</span></h3>
    <div class= "m-4">
        <p id="post-content" class="post-content">{{post.text}}</p>
    </div>
    <button
    type="click"
    data-post-id={{post.id}}
    id="comment-btn"
    class="flex rounded-md bg-blue-700 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-gray-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Comments
    </button>
</div>
{{/each}}